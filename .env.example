# Lazy Trading Bot — Environment Variables
# Copy this to .env and edit as needed.

# ── LLM Provider ──────────────────────────────────────────
# Which provider to use: "ollama" or "lmstudio"
LLM_PROVIDER=ollama

# Provider URLs (change these to match your setup)
OLLAMA_URL=http://localhost:11434
LMSTUDIO_URL=http://localhost:1234

# Model name (provider-specific)
# Ollama example: gemma3:27b, llama3:8b
# LM Studio example: lmstudio-community/Meta-Llama-3-8B-Instruct-GGUF
LLM_MODEL=gemma3:27b

# LLM tuning
LLM_CONTEXT_SIZE=8192
LLM_TEMPERATURE=0.3

# OpenAI/LM Studio API key (LM Studio usually doesn't need one)
OPENAI_API_KEY=

# ── Server ────────────────────────────────────────────────
HOST=0.0.0.0
PORT=8000
